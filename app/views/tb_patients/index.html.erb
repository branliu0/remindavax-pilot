<h1>TB Registrations</h1>
<p class="subhead">If the registration you are looking for is not listed below, please add the registration <%= link_to "here", new_tb_patient_path %>.</p>

<%= will_paginate %>

<table id="tb_patients">
  <thead>
    <tr>
      <td>Name</td>
      <td>Subcenter</td>
      <td>Mobile</td>
      <td>Caste</td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @tb_patients.each do |p| %>
      <tr>
        <td><%= link_to p.name, p %></td>
        <td><%= (p.subcenter.nil?) ? "None" : (link_to p.subcenter.name, p.subcenter) %></td>
        <td><%= p.mobile %></td>
        <td><%= TbPatient::Caste[p.caste.to_i] %></td>
        <td><%= link_to "Edit", edit_tb_patient_path(p) %></td>
        <td><%= link_to "Delete", p, :method => :delete, :confirm => "Are you sure you want to delete this registration?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<%= link_to "Add New Registration to Database", new_patient_path, :id => "add_patient" %>
