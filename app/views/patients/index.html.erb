<%= render :partial => 'search_form' %>
<h1>Patients</h1>
<p class="subhead">If the patient you are looking for is not listed below, please add the patient <%= link_to "here", new_patient_path %>.</p>

<%= will_paginate %>

<table id="patients">
  <thead>
    <tr>
      <td></td>
      <td>Name</td>
      <td>Mobile</td>
      <td>Taayi Card Number</td>
      <td>Caste</td>
      <td>Next Appointment</td>
      <td>Latest Visit</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |p| %>
      <tr patient="<%= p.id %>" checked_in="<%= p.checked_in? %>">
        <td></td>
        <td><%= link_to p.name, p %></td>
        <td><%= p.mobile %></td>
        <td><%= (p.taayi_card_number.nil?) ? "N/A" : p.taayi_card_number %></td>
        <td><%= p.caste %></td>
        <td><%= (p.next_appointment.nil?) ? "None" : p.next_appointment.date %></td>
        <td><%= (p.latest_visit.nil?) ? "None" : p.latest_visit.date %></td>
        <td><%= link_to "Delete", p, :method => :delete, :confirm => "Are you sure you want to delete this patient?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<%= link_to "Add New Patient to Database", new_patient_path, :id => "add_patient" %>
