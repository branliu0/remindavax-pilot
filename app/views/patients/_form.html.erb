<%= semantic_form_for @patient do |form| %>
  <%= form.inputs do %>
    <%= form.input :name %>
    <%= form.input :husband_name %>
    <%= form.input :mother_age %>
    <%= form.input :subcenter, :collection => current_user.phc.subcenters %>
    <%= form.input :village %>
    <%= form.input :anm, :collection => current_user.phc.anms %>
    <%= form.input :mobile %>
    <%= form.input :cell_access, :as => :radio %>
    <%= form.semantic_errors :encrypted_taayi_card_number %>
    <%= form.input :taayi_card_number %>
    <%= form.input :ec_number, :label => 'EC Number' %>
    <%= form.input :expected_delivery_date, :as => :string, :input_html => { :datepicker => "true" } %>
    <%= form.input :caste %>
    <%= form.input :education %>
    <%= form.input :delivery_place %>
  <% end %>
  <%= form.buttons do %>
    <%= form.commit_button :label => (@patient.new_record?) ? 'Create Registration' : 'Update Registration' %>
  <% end %>
<% end %>
