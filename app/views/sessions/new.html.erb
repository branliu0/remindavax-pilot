<h1>Sign in</h1>
<%= semantic_form_for(:session, :url => sessions_path) do |form| %>
  <%= form.inputs do %>
    <%= form.input :username %>
    <%= form.input :password, :as => :password %>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :value => "Login!" } %>
  <% end %>
<% end %>
