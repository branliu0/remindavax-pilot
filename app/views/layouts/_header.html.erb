<header>
  <div id="logo">
    <h1>
      <%= link_to(root_path) do %>
        <span>Reminda</span>vax
      <% end %>
    </h1>
  </div>
  <nav>
  <ul>
    <% if logged_in? %>
      <li>
      <%= "Welcome, #{current_user.username}" %>
      <% if current_user.admin? %>
        | <%= link_to "Create User", new_user_path %> | <%= link_to "Create PHC", new_phc_path %>
      <% end %>
      </li>
      <li>PHC: <%= current_user.phc.name %></li>
      <li><%= link_to "logout", logout_path %></li>
    <% else %>
      <li><%= link_to "login", login_path %></li>
    <% end %>
  </ul>
  </nav>
</header>
